<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    >

    <ImageView
        android:id="@+id/usericonheaderlayout"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/usericon3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        />
    <TextView
        android:id="@+id/navigationheaderEmail"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"

        android:layout_below="@+id/usericonheaderlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/headernavigationname"

        android:layout_below="@+id/navigationheaderEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</RelativeLayout>