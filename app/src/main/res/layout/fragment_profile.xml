<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chairMain.profileFragment">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/updateprogress"
            android:visibility="gone"
                />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userid"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/usericonprofile"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/usericon3"
            />
        <com.google.android.material.textfield.TextInputLayout

            android:id="@+id/inputlayoutFirstname"
            android:layout_below="@id/usericonprofile"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="FirstName"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
                <com.google.android.material.textfield.TextInputEditText

                    android:id="@+id/edtFirstNameprofile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputlayoutLastnameprofile"
            android:layout_below="@id/inputlayoutFirstname"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="LastName"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
                <com.google.android.material.textfield.TextInputEditText

                    android:id="@+id/edtLastnameprofile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputlayoutcontectprofile"
            android:layout_below="@id/inputlayoutLastnameprofile"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Contect Number"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
                <com.google.android.material.textfield.TextInputEditText
                    android:inputType="number"
                    android:id="@+id/edtContectprofile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputlayouthousenoprofile"
            android:layout_below="@id/inputlayoutcontectprofile"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="House Number"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
                <com.google.android.material.textfield.TextInputEditText
                    android:inputType="number"
                    android:id="@+id/edthousenoprofile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnuserupadte"
            android:padding="20dp"
            android:backgroundTint="@color/ActionBarColor"
            android:textAllCaps="false"
            android:text="Update"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/inputlayouthousenoprofile"
        />






</RelativeLayout>